{
  "name": "wavevision/coding-standard",
  "description": "The Wavevision PHP coding standard.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Wavevision s.r.o.",
      "email": "info@wavevision.com"
    },
    {
      "name": "Jakub Filla",
      "email": "jakub.filla@wavevision.com"
    },
    {
      "name": "Vít Rozsíval",
      "email": "vit@wavevision.com"
    }
  ],
  "homepage": "https://github.com/wavevision/coding-standard",
  "autoload": {
    "psr-4": {
      "WavevisionCodingStandard\\": "php/WavevisionCodingStandard/"
    }
  },
  "require": {
    "php": ">=7.4",
    "slevomat/coding-standard": "^6.0"
  },
  "require-dev": {
    "jakub-onderka/php-parallel-lint": "^1.0",
    "phing/phing": "^2.16",
    "php-coveralls/php-coveralls": "^2.1",
    "phpstan/phpstan": "^0.12.3",
    "phpunit/phpunit": "^8.3"
  },
  "config": {
    "platform": {
      "php": "7.4"
    },
    "sort-packages": true
  },
  "suggest": {
    "phpstan/phpstan": "PHP Static Analysis Tool - discover bugs in your code without running it!",
    "phpunit/phpunit": "The PHP Unit Testing framework.",
    "jakub-onderka/php-parallel-lint": "This tool check syntax of PHP files faster than serial check with fancier output."
  },
  "scripts": {
    "phing": "phing"
  },
  "archive": {
    "exclude": [
      "/.*",
      "/build.xml",
      "/codesniffer-ruleset.xml",
      "/package.json",
      "/phpstan.neon",
      "/phpunit.xml",
      "/prettier.config.js",
      "/scss",
      "/ts",
      "/tsconfig.json",
      "/yarn.lock"
    ]
  }
}
